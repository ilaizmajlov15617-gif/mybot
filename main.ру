import telebot
from telebot import types

TOKEN = "8352938832:AAGooh41WdnQgmcqNxBzYSnC1QvqMpeCqBg"
bot = telebot.TeleBot(TOKEN)

@bot.message_handler(commands=['start'])
def start(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = types.KeyboardButton("üëã –ü–æ–∑–¥–æ—Ä–æ–≤–∞—Ç—å—Å—è")
    btn2 = types.KeyboardButton("‚ùì –ß—Ç–æ —Ç—ã —É–º–µ–µ—à—å?")
    markup.add(btn1, btn2)
    bot.send_message(message.chat.id, "–ë–æ—Ç –æ–±–Ω–æ–≤–ª–µ–Ω! –í—ã–±–µ—Ä–∏ –¥–µ–π—Å—Ç–≤–∏–µ:", reply_markup=markup)

@bot.message_handler(content_types=['text'])
def func(message):
    if(message.text == "üëã –ü–æ–∑–¥–æ—Ä–æ–≤–∞—Ç—å—Å—è"):
        bot.send_message(message.chat.id, "–ü—Ä–∏–≤–µ—Ç! –†–∞–¥ —Ç–µ–±—è –≤–∏–¥–µ—Ç—å!")
    elif(message.text == "‚ùì –ß—Ç–æ —Ç—ã —É–º–µ–µ—à—å?"):
        bot.send_message(message.chat.id, "–Ø –ø–æ–∫–∞ —Ç–æ–ª—å–∫–æ —É—á—É—Å—å, –Ω–æ —É–∂–µ –∂–∏–≤—É –Ω–∞ —Ö–æ—Å—Ç–∏–Ω–≥–µ!")
    else:
        bot.send_message(message.chat.id, "–Ø —Ç–µ–±—è –Ω–µ –ø–æ–Ω–∏–º–∞—é, –Ω–∞–∂–º–∏ –Ω–∞ –∫–Ω–æ–ø–∫—É.")

bot.infinity_polling()
